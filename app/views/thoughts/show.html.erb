<h1><%= @thought.title %></h1>
  <p><%= @thought.body %></p>
  <%= link_to "Редактировать", edit_thought_path(@thought), :class => 'btn btn-warning' %>
    <%= link_to "Удалить", thought_path(@thought), method: :delete, :class => 'btn btn-warning' %>
      
    <h4>Все комментарии</h4>
    <% @thought.comments.each do |comment| %>
    <div class="alert alert-light">
     <p><strong><%= comment.username %><strong>: <%= comment.body %></p>
      </div>
  <% end %>
    
<h3>Добавление комментарий</h3>
<%= form_for([@thought, @thought.comments.build]) do |f| %>
  <p>Пользователь<br>
    <%= f.text_field(:username, {:class => 'form-control'}) %></p>
   <p>
    Введите комментария<br>
    <%= f.text_area(:body, {:class => 'form-control'}) %>
  </p>
   <p>
    <%= f.submit( "Добавить комментарий", {:class => 'btn btn-warning'}) %>
  </p>
  <% end %>
